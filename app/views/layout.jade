
//- # layout

doctype
html.no-js
  head
    title Igloo
    block meta
      meta(charset='utf-8')
      meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
      meta(name='description', content='')
      meta(name='viewport', content='width=device-width, initial-scale=1')
    block stylesheets
      link(rel='stylesheet', href='/css/bootstrap.min.css')
      link(rel='stylesheet', href='/css/bootstrap-theme.min.css')
      link(rel='stylesheet', href='/css/style.css')
    script(src='/js/vendor/modernizr-2.6.2-respond-1.1.0.min.js')
  body

    //- Browse Happy
    //- <http://browsehappy.com/>
    != "<!--[if lt IE 8]>"
    p.browsehappy
      = 'You are using an '
      strong outdated
      = ' browser. Please '
      a(href="http://browsehappy.com/") upgrade your browser
      = ' to improve your experience.'
    != "<!--<![endif]-->"

    //- TODO: Improve this into an include or something, it's sloppy
    block messages
      if messages
        each arr, msgType in messages
          if arr.length > 0
            each message in arr
              if msgType === 'error'
                - msgType = 'danger'
              .alert.alert-dismissable(class='alert-' + msgType)
                button(type='button', data-dismiss='alert', aria-hidden='true').close: i.fa.fa-times-circle
                != typeof message === "object" ? JSON.stringify(message) : message
    block content
    block scripts
      script(src="//ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js")
      script.
        window.jQuery || document.write('<script src="js/vendor/jquery-1.11.0.min.js"><\\/script>')
      script(src="/js/vendor/bootstrap.min.js")
      script(src="/js/vendor/bootbox.min.js")
      script(src="/js/plugins.js")
      script(src="/js/main.js")
      script(src='/js/vendor/ga.js')
