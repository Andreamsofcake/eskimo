
//- # <%= _.dasherize(name).split('-').join(' ') %> - new

extends ../layout

block content
  .container
    .row
      .col-md-4.col-md-offset-4
        h1 Create New <%= _.humanize(_.classify(name)) %>

        form(action='/<%= _.pluralize(_.dasherize(name)) %>', method='POST')
          input(type='hidden', name='_csrf', value=csrf)

          .form-group
            label.control-label Name
            input(type='text', name='name', placeholder='Name', required).form-control

          button(type='submit').btn.btn-lg.btn-primary.btn-block Create New <%= _.humanize(_.classify(name)) %>